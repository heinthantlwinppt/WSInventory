<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingRight="15dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.user.prodhdrtest.MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Serial no:" />

            <EditText
                android:id="@+id/seial_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="123"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Goodsid" />

            <EditText
                android:id="@+id/goodsid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="Goodsid"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Name" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="Name"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Design:" />


            <Spinner
                android:id="@+id/product"
                android:layout_marginStart="15dip"
                android:layout_width="match_parent"
                style="@style/spinner_style_1"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gold:" />


            <Spinner
                android:id="@+id/gold"
                android:layout_marginStart="15dip"
                style="@style/spinner_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Smith:" />


            <Spinner
                android:id="@+id/smith"
                style="@style/spinner_style_1"
                android:layout_marginStart="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Staff:" />


            <Spinner
                android:id="@+id/staff"
                style="@style/spinner_style_1"
                android:layout_marginStart="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:visibility="gone"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Uom:" />


            <Spinner
                android:id="@+id/uom"
                style="@style/spinner_style_1"
                android:layout_marginStart="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Dislength:" />

            <EditText
                android:id="@+id/dislength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="Dislength"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Plength" />

            <EditText
                android:id="@+id/Plength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="Plength"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Photo" />

            <Button
                android:id="@+id/camera"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="TakePhoto"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dip"
                android:visibility="gone"
                android:layout_height="200dip"
                android:id="@+id/image"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="BarCode" />

            <EditText
                android:id="@+id/barcode"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginStart="15dip"
                android:hint="Barcode"
                android:gravity="start"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tag" />

            <EditText
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="Name"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Weight" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="K:" />

            <EditText
                android:id="@+id/k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="P:" />

            <EditText
                android:id="@+id/p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Y:" />

            <EditText
                android:id="@+id/y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Location:" />


            <Spinner
                android:id="@+id/location"
                style="@style/spinner_style_1"
                android:layout_marginStart="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Counter:" />


            <Spinner
                android:id="@+id/bin"
                style="@style/spinner_style_1"
                android:layout_marginStart="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tray:" />


            <Spinner
                android:id="@+id/pallet"
                style="@style/spinner_style_1"
                android:layout_marginStart="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Reduce Weight:" />

            <EditText
                android:id="@+id/reduce_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Reduce K:" />

            <EditText
                android:id="@+id/reduce_k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Reduct P:" />

            <EditText
                android:id="@+id/reduce_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dip"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Reduce Y:" />

            <EditText
                android:id="@+id/reduce_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Remark:" />

            <EditText
                android:id="@+id/remrk"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_marginStart="15dip"
                android:hint="Remark"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingStart="10dip"
            android:layout_gravity="right"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="cancel" />

            <Button
                android:id="@+id/save"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:text="save"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

