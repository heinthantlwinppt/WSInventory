<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#be797878"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingStart="25dip"
                android:background="@drawable/cardvivew"
                android:paddingRight="15dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Serial no:" />

                    <EditText
                        android:id="@+id/seial_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="123"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Goodsid" />

                    <EditText
                        android:id="@+id/goodsid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Goodsid"
                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Name" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Product:" />

                    <Spinner
                        android:id="@+id/product"
                        android:layout_width="match_parent"
                        style="@style/spinner_style"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Gold:" />

                    <Spinner
                        android:id="@+id/gold"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/cardvivew"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:paddingStart="25dip"
                android:paddingRight="15dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Smith:" />


                    <TextView
                        android:id="@+id/smith"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Staff:" />


                    <Spinner
                        android:id="@+id/staff"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/cardvivew"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:paddingStart="25dip"
                android:paddingRight="15dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Uom:" />


                    <Spinner
                        android:id="@+id/uom"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Dislength:" />

                    <EditText
                        android:id="@+id/dislength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dislength"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Plength" />

                    <EditText
                        android:id="@+id/Plength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Plength"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Photo" />

                    <Button
                        android:id="@+id/camera"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:hint="TakePhoto"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingStart="10dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="200dip"
                        android:visibility="gone"
                        android:layout_height="200dip"
                        android:id="@+id/image" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="BarCode" />

                    <EditText
                        android:id="@+id/barcode"
                        android:layout_width="match_parent"
                        android:layout_height="100dip"
                        android:hint="Barcode"
                        android:gravity="start"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Tag" />

                    <EditText
                        android:id="@+id/tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/cardvivew"
                android:layout_width="match_parent"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:paddingStart="25dip"
                android:paddingRight="15dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Weight" />

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="K:" />

                    <EditText
                        android:id="@+id/k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="P:" />

                    <EditText
                        android:id="@+id/p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Y:" />

                    <EditText
                        android:id="@+id/y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingStart="25dip"
                android:background="@drawable/cardvivew"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:paddingRight="15dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Location:" />


                    <Spinner
                        android:id="@+id/location"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Bin:" />


                    <Spinner
                        android:id="@+id/bin"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="pallet:" />


                    <Spinner
                        android:id="@+id/pallet"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/cardvivew"
                android:paddingStart="25dip"
                android:paddingRight="15dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reduce Weight:" />

                    <EditText
                        android:id="@+id/reduce_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reduce K:" />

                    <EditText
                        android:id="@+id/reduce_k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reduct P:" />

                    <EditText
                        android:id="@+id/reduce_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reduce Y:" />

                    <EditText
                        android:id="@+id/reduce_y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/cardvivew"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:paddingStart="25dip"
                android:paddingRight="15dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Remark:" />

                    <EditText
                        android:id="@+id/remrk"
                        android:layout_width="match_parent"
                        android:layout_height="200dip"
                        android:hint="Remark"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingStart="10dip"
            android:layout_gravity="end"
            android:background="@drawable/cardvivew"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel"
                android:layout_width="80dip"
                android:background="@drawable/bg_primary_button"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="cancel" />

            <Button
                android:id="@+id/save"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:text="save"
                android:layout_marginEnd="5dip"
                android:background="@drawable/bg_success_button"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="10dip"/>

    </LinearLayout>
</ScrollView>