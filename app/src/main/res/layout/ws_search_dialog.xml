<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<SearchView-->
        <!--android:id="@+id/searchView1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" >-->
    <!--</SearchView>-->

    <!--<ListView-->
        <!--android:id="@+id/listView1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="326dp" >-->
    <!--</ListView>-->
    <TextView
        android:id="@+id/title"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Search Product"
        android:textColor="#000"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Enter Product Name"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Product Name"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_textview"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtgroup_name"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Choose Group Name "
                android:textColor="@color/black"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--<EditText-->
                <!--android:id="@+id/group_name"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Enter Group Name Here"-->
                <!--android:textSize="14sp" />-->

            <Spinner
                android:id="@+id/group_name"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

            </Spinner>

            <TextView
                android:id="@+id/SubGroup"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Choose SubGroup Name "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--<EditText-->
                <!--android:id="@+id/SubGroup_name"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Enter SubGroup Name Here"-->
                <!--android:textSize="14sp" />-->

            <Spinner
                android:id="@+id/SubGroup_name"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

            </Spinner>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnOk"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

    </LinearLayout>

</LinearLayout>