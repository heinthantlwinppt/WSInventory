<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dip"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_marginBottom="10dip"
            android:background="#be797878"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingStart="25dip"
                    android:background="@drawable/cardvivew"
                    android:paddingRight="15dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Counter id" />

                        <!--<TextView-->
                        <EditText
                            android:id="@+id/pallet_counter_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dip"
                            android:text="id"
                            android:background="@drawable/bg_textview" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Counter Name" />

                        <EditText
                            android:id="@+id/pallet_counter_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Counter Name"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Counter Type" />

                        <EditText
                            android:id="@+id/pallet_counter_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Counter Type"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Counter description" />

                        <EditText
                            android:id="@+id/pallet_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="description"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingStart="25dip"
                    android:background="@drawable/cardvivew"
                    android:paddingRight="15dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Location" />

                        <Spinner
                            android:id="@+id/pallet_location_id"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="8dip"
                            android:layout_marginBottom="8dip"
                            android:layout_marginTop="8dip"
                            style="@style/spinner_style"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingStart="25dip"
                    android:background="@drawable/cardvivew"
                    android:paddingRight="15dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Bar Code" />

                        <EditText
                            android:id="@+id/pallet_barcode"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="8dip"
                            android:layout_height="wrap_content"
                            android:text="barcode"
                            android:background="@drawable/bg_textview"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"/>

                        <!--<TextView-->
                        <EditText
                            android:id="@+id/pallet_tag"
                            android:layout_marginEnd="8dip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="barcode"
                            android:background="@drawable/bg_textview"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Weight" />

                        <EditText
                            android:id="@+id/pallet_pallet_weight"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="8dip"
                            android:layout_height="wrap_content"
                            android:text="weight"
                            android:background="@drawable/bg_textview"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:text="Tag" />-->

                        <CheckBox
                            android:id="@+id/pallet_is_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:checked="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_height="wrap_content">

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:text="Tag" />-->

                        <CheckBox
                            android:id="@+id/pallet_is_used"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Is Used"
                            android:checked="true"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginEnd="8dip"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/pallet_cancel_btn"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_primary_button"
            android:layout_marginEnd="5dip"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Cancel"/>
        <Button
            android:id="@+id/pallet_confirm_btn"
            android:layout_width="100dip"
            android:layout_marginStart="5dip"
            android:layout_marginEnd="5dip"
            android:textColor="#fff"
            android:background="@drawable/bg_success_button"
            android:layout_height="50dip"
            android:text="Confirm"/>
    </LinearLayout>
</RelativeLayout>