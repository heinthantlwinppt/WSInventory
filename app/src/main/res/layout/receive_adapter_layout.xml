<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_textview"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtproduct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtproduct_name"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dip"
        android:layout_marginTop="5dip"
        android:text="ဝိုင္းဝိုင္းလည္"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/txtproduct_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txtproduct_name"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="15dip"
        android:layout_marginTop="10dip"
        android:text="Product Type"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_type"
        android:layout_width="wrap_content"
        android:layout_marginStart="80sp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txtproduct_name"
        android:layout_below="@id/txtproduct_type"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dip"
        android:text="Hand Change"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/product_quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text="Quantity:"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/product_quantity_title"
        android:text="1000 ,"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/product_quantity"
        android:layout_alignBottom="@+id/product_quantity"
        android:layout_alignStart="@+id/product_type"
        android:text="Weight:"
        android:textColor="@color/black"
        android:textStyle="italic|bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_type"
        android:layout_marginTop="10dip"
        android:id="@+id/prod_weight"
        android:layout_toEndOf="@id/txtweight"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:text="100 g"
        />



</RelativeLayout>


