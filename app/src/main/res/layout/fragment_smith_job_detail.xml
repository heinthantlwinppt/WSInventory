<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ppt.wsinventory.SmithJobDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:text="@string/hello_blank_fragment" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_joborder_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Job Order no."
            android:textSize="15sp"
            android:textStyle="bold" />


            <EditText
                android:id="@+id/joborder_no"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />



        <TextView
            android:id="@+id/tv_smith_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Smith ID"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_rowWeight="1"
            card_view:cardCornerRadius="1dp"
            card_view:contentPadding="4dp">

            <EditText
                android:id="@+id/smith_id"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_rowWeight="1"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_joborder_date"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Job Order Date"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/joborder_date"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_date_start"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Date Start"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/date_start"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_date_target"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Date Target"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/date_target"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_date_end"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Date End"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/date_end"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_rowWeight="1"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_prejewelout"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Pre Jewel Out"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/prejewelout"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_prejewelout_date"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Pre Jewel Out Date"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/prejewelout_date"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_rowWeight="1"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_joborder_type_id"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Job Order Type ID"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/joborder_type_id"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_remarks"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Remark"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/remarks"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
